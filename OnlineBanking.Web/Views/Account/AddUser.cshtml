
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model AddUserModel;
}

    <form asp-action="AddUser" asp-controller="Account" method="post">
       
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group col-md-6 col-lg-6">
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="UserName">

            </div>
            <div class="form-group col-md-6 col-lg-6">
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="Password">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6 col-lg-6">
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Full Name" asp-for="Name">
            </div>
            <div class="form-group col-md-6 col-lg-6">
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Initial Account Balance" asp-for="IntialBalance">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
